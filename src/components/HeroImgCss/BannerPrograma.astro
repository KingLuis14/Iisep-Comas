---
interface Props {
    categoria: string;
    titulo: string;
    description: string;
    base64: string;
    lcpi: string;
    original: string;
}

const { titulo, description, categoria, base64, lcpi, original } = Astro.props;

---

<div id="ContainerGrid" class="HeroImgContainer">
    <div class="wrapper HeroContainer">
        <article class="Hero__Contenido" id="Hero__Contenido">
            <h4 class="Hero__Categoria">{categoria}</h4>
            <h1 class="superTitulo">{titulo}</h1>
            <p class="Hero__Parrafo">{description}</p>
            <a href="#" class="Hero__boton">Inscribete</a>
        </article>
        <div
            style="border-radius: 1rem;overflow: hidden; display: block; grid-area: imagen; align-self: center;"
        >
            <img
                src={original}
                style={`background-image: url(${lcpi}), url(${base64})`}
                class="Hero__Img"
                alt=`IISEP - ${titulo}`
            />
        </div>
    </div>
</div>

<style lang="scss">
    .HeroImgContainer {
        display: grid;
        min-height: auto;
        background-color: var(--color-Primary);

        @media (width > 640px) {
            min-height: calc(100svh - var(--alto-header));
        }
    }

    .HeroContainer {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-areas:
            "imagen"
            "contenido";
        overflow: hidden;
        gap: 2rem;
        padding-block: 2rem;

        @media (width > 640px) {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto;
            grid-template-areas: "contenido imagen";
        }
    }

    .Hero__Contenido {
        align-self: start;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1.4rem;
        grid-area: contenido;
        color: white;
        @media (width > 640px) {
            align-self: stretch;
        }
    }

    .Hero__Parrafo{
        color: rgb(226, 226, 226);
    }

    .Hero__Img {
        align-self: center;
        background-color: rgb(31, 31, 31);
        aspect-ratio: 16/9;
        transform: scale(1.02);
        transition: transform 0.6s;

        &:hover {
            transform: scale(1.2);
        }
    }

    .Hero__Categoria {
        background-color: white;
        color: black;
        width: fit-content;
        padding-inline: 1rem;
        font-weight: 800;
        clip-path: polygon(5% 0, 100% 0%, 95% 100%, 0% 100%);
    }

    .Hero__boton {
        align-self: start;
        color: rgb(255, 255, 255);
        padding: 0.5rem 1rem;
        border-radius: 100vmax;
        background-color: var(--color-Secondary);
    }
</style>
