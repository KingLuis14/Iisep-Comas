---
import { Icon } from "astro-icon/components";

const href = "Hola, puede brindarme informacion sobre los programas de estudio del instituto IISEP";

const mensajeCodificado = href.replace(/ /g, '%20');

---

<a href={`https://wa.me/51904209403?text=${mensajeCodificado}`} 
     target="_blank" class="Container"
     aria-label="boton para abrir el whatsapp"
     >
    <span>
        <Icon name="WhatsAppIcon" size={40} />
    </span>
</a>

<style lang="scss">
    .Container {
        position: fixed;
        bottom: .3rem;
        right: .3rem;
        display: block;
        width: 80px;
        aspect-ratio: 1/1;
        z-index: 100;

        &::before {
            content: "Escribenos";
            position: absolute;
            display: block;
            color: rgb(255, 255, 255);
            background-color: rgb(0, 0, 0);
            padding: 0.4rem .8rem;
            border-radius: 100vh;
            top: 50%;
            left: -40%;
            transform-origin: center right;
            transform: translate(0, -50%);
            opacity: 0;
            font-weight: 700;
            animation: Show 25s 10s linear infinite;

            @keyframes Show {
                2%,
                23% {
                    transform: translate(-69%, -50%);
                    opacity: 1;
                }
                26%,
                100% {
                    transform: translate(0, -50%);
                    opacity: 0;
                }
            }
        }
    }

    span {
        position: absolute;
        top: 50%;
        left: 50%;
        background-color: rgb(56, 203, 78);
        box-shadow: 0 0 7px 2px rgba(0, 0, 0, 0.203);
        display: grid;
        place-items: center;
        padding: 0.7rem;
        border-radius: 50%;
        color: white;
        transform: translate(-50%, -50%) scale(0);
        animation: WhatsApp .5s 2.5s forwards ease;

        &::after{
            content: "1";
            display: grid;
            place-items: center;
            background-color: red;
            width: 2rem;
            aspect-ratio: 1/1;
            transform: scale(0);
            font-weight: 800;
            position: absolute;
            top: -8px;
            right: -8px;
             border-radius: 50%;
             animation: Notificacion 25s 10.7s linear infinite;

             @keyframes Notificacion {
                2%,
                23% {
                    transform: scale(.7);
                    
                }
                26%,
                100% {
                    transform: scale(0);
                }
            }
        }

        @keyframes WhatsApp {
            100% {
                transform: translate(-50%, -50%) scale(1);
            }
        }
    }
</style>
