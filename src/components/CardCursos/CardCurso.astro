---
import ItemCurso from "./ItemCurso.astro";
const {ArrayCursos} = Astro.props;
---

<article>
    {
        function () {
                let Programa = []
                    for (let Element in  ArrayCursos){
                        const {info} =  ArrayCursos[Element];        
                        Programa.push(<ItemCurso {...info}/>)
                        //console.log(info);
                        
                    }
                return Programa
        }() 

    }
</article>

<style lang="scss">
    article {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
    }
</style>
