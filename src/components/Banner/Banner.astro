---
interface Props {
    titulo : string;
    description: string;
    textButton: string;
    base64: string;
    smallLcpi: string;
    small : string;
    largeLcpi: string;
    large: string;
}

const {titulo, description, textButton, smallLcpi, small, largeLcpi, large, base64} = Astro.props;
---

<div 
    class="HeroImgContainer"
    style={`--base64: url(${base64});
            --small-lcpi: url(${smallLcpi});
            --small: url(${small});
            --large-lcpi: url(${largeLcpi});
            --large: url(${large});`} 
    >
    <article class="contenido">
        <div class="wrapper" style="gap: 1.5rem;" >
            <h1 class="superTitulo">{ titulo }</h1>
            <p>{description}
            </p>
            <a href="/contacto" class="contenido__boton" >{ textButton }</a>
        </div>
    </article>
</div>

<style lang="scss">

    .HeroImgContainer {
        --Ibase64 : var(--base64);
        --lcpi : var(--small-lcpi);
        --original : var(--small);
        height: calc(100vmin - var(--alto-header)); 
        min-height: 70svh;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-image: var(--original), var(--lcpi), var(--Ibase64) ;

        @media (min-width: 640px) {
            --lcpi : var(--large-lcpi);
            --original : var(--large);
        }
        
    }

    .contenido {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        text-align: center;
        color: white;
        
        background-image: linear-gradient(
            135deg,
            rgba(15, 15, 255, 0.66) 0%,
            rgba(25, 25, 255, 0.66) 100%
        );

        &__boton{
            color: rgb(255, 255, 255);
            justify-self: center;
            padding: .5rem 1rem;
            border-radius: 100vh;
            background-color: var(--color-Secondary);
            font-weight: 700;
        }
    }

    p{
        @media (width > 768px) {
            white-space: pre-line;
        }
    }
    
</style>



