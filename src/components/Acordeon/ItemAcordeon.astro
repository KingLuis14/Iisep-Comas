---
interface Props {
    tema: string;
    colorIcono : string;
    class?: string
}

const { tema ,colorIcono , class: className, ...rest} = Astro.props;
import { Icon } from "astro-icon/components";
---

<li class=`${className}` {...rest} >
    <span>
        <Icon name="CheckIcon" size={21} />
    </span>
    <p >{tema}</p>
</li>

<style lang="scss" define:vars={{ colorIcono }}>
    li {
        display: flex;
        align-items: start;
        gap: 0.7rem;

        > span {
            margin-top: 0.07rem;
            flex-shrink: 0;
            color: var(--colorIcono);
            line-height: normal;
            height: min-content;
        }
    }
</style>
